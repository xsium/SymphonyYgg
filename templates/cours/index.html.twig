{% extends 'base.html.twig' %}

{% block title %}Hello CoursController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container mt-4">
    <h1 class="text-center mb-4">Nos Cours</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for cour in cours %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ asset('images/placeholder.jpg') }}" class="card-img-top" alt="{{ cour.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ cour.nom }}</h5>
                        <p class="card-text">
                            {{ cour.description|length > 100 ? cour.description[:100] ~ '...' : cour.description }}
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Dur√©e : {{ cour.duree }} heures</small>
                        </p>
                        
                    </div>
                </div>
            </div>
        {% else %}
            <div class="container">
                <p class="text-center">Aucun cours disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
    </div>
</div>
{% endblock %}
