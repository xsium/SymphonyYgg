{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container mt-4">
    <h1 class="text-center mb-4">Nos Formations</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for formation in formations %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ asset('images/placeholder.jpg') }}" class="card-img-top" alt="{{ formation.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ formation.nom }}</h5>
                        <p class="card-text">
                            {{ formation.description|length > 100 ? formation.description[:100] ~ '...' : formation.description }}
                        </p>
                        <a href="{{ path('app_formation_show', { id: formation.id }) }}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="container">
                <p class="text-center">Aucune Formation disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
    </div>
</div>
{% endblock %}
