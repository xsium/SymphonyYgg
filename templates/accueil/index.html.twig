{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <!-- section : html  + js -->
    <section class="d-block">
      <div
        id="carouselExampleIndicators"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <ol class="carousel-indicators">
          <li
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="0"
            class="active"
          ></li>
          <li
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="1"
          ></li>
          <li
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="2"
          ></li>
        </ol>
        <div class="carousel-inner mycarousel">
          <div class="carousel-item active">
            <img class="d-block w-100" src="{{ asset('images/test2.jpg') }}" alt="First slide" />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="{{ asset('images/test1.jpg') }}"
              alt="Second slide"
            />
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="{{ asset('images/test3.jpg') }}" alt="Third slide" />
          </div>
        </div>
        <a
          class="carousel-control-prev"
          href="#carouselExampleIndicators"
          role="button"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <a
          class="carousel-control-next"
          href="#carouselExampleIndicators"
          role="button"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
      </div>

      <div class="article">
        <div class="content">
          <h2>Article Title 1</h2>
          <img src="{{ asset('images/placeholder.jpg') }}" alt="Article Image 1" />
          <p class="author">By John Doe</p>
          <p class="description">
            This is a short description of the first article. Itâ€™s designed to
            be concise and readable on mobile screens.
          </p>
        </div>
      </div>

      <div class="article">
        <div class="content">
          <h2>Article Title 2</h2>
          <img src="{{ asset('images/placeholder.jpg') }}" alt="Article Image 2" />
          <p class="author">By Jane Smith</p>
          <p class="description">
            This is a short description of the second article. It gives an
            overview of the content to engage readers.
          </p>
        </div>
      </div>

      <div class="article">
        <div class="content">
          <h2>Article Title 3</h2>
          <img src="{{ asset('images/placeholder.jpg') }}" alt="Article Image 3" />
          <p class="author">By Alex Brown</p>
          <p class="description">
            A brief introduction to the third article. This description helps
            the reader understand the article topic.
          </p>
        </div>
      </div>
    </section>

    <!-- section end -------- -->
</div>
{% endblock %}
